<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EmployeeGui.ManageSalesTab">
   <children>
      <HBox alignment="CENTER" spacing="50.0">
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <JFXSpinner />
                        <Label text="Scan Barcode Any Time You Like" />
                     </children>
                  </VBox>
                  <JFXTextField fx:id="barcodeField" promptText="Or Insert Barcode Manually" styleClass="JFXTextField" />
                  <VBox fx:id="scannedProductPane">
                     <children>
                        <Label text="Scanned Product" />
                        <HBox>
                           <children>
                              <Label text="Product Name:" />
                              <Label fx:id="productNamelbl" text="N/A" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox fx:id="chooseSalePane">
                     <children>
                        <Label text="Choose Sale" />
                        <HBox>
                           <children>
                              <Label text="Sale Type" />
                              <JFXComboBox fx:id="saleTypeCombo" styleClass="JFXComboBox" />
                           </children>
                        </HBox>
                        <VBox>
                           <children>
                              <JFXCheckBox fx:id="groupSaleChk" onMouseClicked="#groupSaleChkPressed" styleClass="JFXCheckBox" text="Group Sale" />
                              <VBox fx:id="minBuyPane">
                                 <children>
                                    <Label text="Min Buy" />
                                    <HBox alignment="CENTER">
                                       <children>
                                          <Spinner fx:id="minAmount" prefHeight="26.0" prefWidth="97.0" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <JFXButton fx:id="addProductSale" styleClass="JFXButton" text="Add Product Sale" />
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label styleClass="headers" text="Single Product Sales" />
                  <HBox spacing="10.0">
                     <children>
                        <JFXListView fx:id="singleList" minHeight="500.0" minWidth="250.0" style="-fx-background-color: transparent;" verticalGap="10.0" />
                        <VBox spacing="10.0">
                           <children>
                              <JFXButton fx:id="removeSingleBtn" onAction="#removeSinglePress" prefWidth="175.0" styleClass="JFXButton" text="Remove Product" />
                              <JFXTextField fx:id="filterSingle" promptText="Search Product" styleClass="JFXTextField" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label styleClass="headers" text="Group Sales" />
                  <HBox spacing="10.0">
                     <children>
                        <JFXListView fx:id="groupList" minHeight="500.0" minWidth="250.0" style="-fx-background-color: transparent;" verticalGap="10.0" />
                        <VBox spacing="10.0">
                           <children>
                              <JFXButton fx:id="removeGroupBtn" onAction="#removeGroupPressed" prefWidth="175.0" styleClass="JFXButton" text="Remove Product" />
                              <JFXTextField fx:id="filterGroup" promptText="Search Product" styleClass="JFXTextField" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets top="100.0" />
   </padding>
   <stylesheets>
      <URL value="@../ProjectCss/projectCss.css" />
      <URL value="@ManageSalesTab.css" />
   </stylesheets>
